@using EFModel;
@model List<Zhp_GameRecord>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="initial-scale=1, maximum-scale=3, minimum-scale=1, user-scalable=no">
    <title>排行榜~</title>
    <link href="~/assets/css/main.css" rel="stylesheet" />
    <link href="~/assets/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <style type="text/css">
        #takeAwayBtn {
            line-height: 0.95rem;
            font-size: 0.7rem;
        }

        .score {
            position: absolute;
            height: 35%;
            margin-top: 0px;
            margin-bottom: 0px;
            top: 1.0rem;
            left: 3.6rem;
            font-size: 15px;
        }

            .score .ipt {
                position: absolute;
                width: 6.0rem;
                height: 3.0rem;
                left: calc( 50% - 3.5rem);
                left: -webkit( 50% - 1.75rem);
            }

        #headimg {
            display: inline-block;
        }

        #playinfo {
            display: inline-block;
            margin-top: 0.5rem;
            line-height: 0.4rem;
        }

        .rank {
            position: absolute;
            height: 60%;
            margin-top: 0px;
            margin-bottom: 0px;
            top: 3.5rem;
            left: 3.6rem;
            font-size: 15px;
        }

        .rank-list {
            margin-left: 0.3rem;
        }

        .rank .rank-list .rank-li {
        }

        .rank .ipt1 {
            position: absolute;
            width: 6.0rem;
            height: 3.0rem;
            left: calc( 50% - 3rem);
            left: -webkit( 50% - 1.75rem);
        }

        .rank-li .nickname-val {
            min-width: 1.2rem;
            display: inline-block;
        }

        .rank-li .score-val {
            min-width: 1.2rem;
            display: inline-block;
        }

        ul li {
            color: #b9335a;
        }

        .rank-list ul li {
            background-color: #400100;
            margin-top: 0.3rem;
            height: 0.4rem;
            font-size: 0.265rem;
        }

            .rank-list ul li span {
                color: #b9335a;
            }

        .rank-list {
            margin-top: 0.2rem;
        }

            .rank-list ul li .i {
                color: #fff;
                position: absolute;
                left: 0.45rem;
            }
    </style>
</head>

<body class="bg">
    <img src="~/assets/img/bg.jpg" id="topImg" style="width: 100%; height: 100%; z-index: -1;" />
    <div class="score">
        <div class="ipt">
            <div id="headimg">
                <img src="@if (ViewData["headimg"] != null)
                          {
                              @ViewData["headimg"].ToString()
                          }" style="border-radius: 50%;" width="100px" height="100px" />
            </div>
        </div>

        <div id="playinfo">
            <ul>
                <li>昵称：<span>
                    @if (ViewData["nickname"] != null)
                    {
                        @ViewData["nickname"].ToString()
                    }
                    </span></li>
                <li>得分：<span>
                    @if (ViewData["score"] != null)
                    {
                        @ViewData["score"].ToString()
                    }</span></li>
                <li>排名：<span>
                    @if (ViewData["rank"] != null)
                    {
                       @ViewData["rank"].ToString()
                    }</span></li>
                <li>类型：<span>@if (ViewData["type"] != null)
                             {
                                 @ViewData["type"].ToString()
                             }</span></li>
            </ul>
        </div>
    </div>

    <div class="rank">
        <div class="ipt1">
            <div class="rank-head" style="margin-right: 10px;">
                <img src="~/assets/img/Rank-head.png" width="180px" height="30px" />
            </div>
            <div class="rank-list">
                <ul>
                    @if (Model != null && Model.Count > 0)
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                        <li class="rank-li">
                            <span class="i">@(i + 1)</span>
                            <img src="~/assets/img/li-head.png" z-index="-1" width="30px" height="20px" />
                            <span class="nickname-lb">昵称：</span>
                            <div class="nickname-val">
                                @Model[i].PlayerNickname.ToString()
                            </div>
                            <span class="score-lb">得分：</span>
                            <div class="score-val">@Model[i].PlayerScore.ToString()</div>
                        </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
    <script src="~/assets/js/jquery-1.11.1.min.js"></script>
    <script src="~/assets/js/rem.js"></script>
    <script type="text/javascript">
        window['adaptive'].desinWidth = 720; // 设计图宽度
        window['adaptive'].maxWidth = 540; // 页面最大宽度 默认540
        window['adaptive'].init(); // 调用初始化方法
        $('body').height($('body').get(0).clientHeight + 'px ');
    </script>
</body>
</html>
